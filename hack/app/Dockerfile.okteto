FROM node:18

# Set working directory
WORKDIR /app

# Install dependencies first (better layer caching)
COPY ./chartsmith-app/.npmrc ./chartsmith-app/package.json ./chartsmith-app/package-lock.json* ./
RUN npm ci

# Copy the rest of the application
COPY ./chartsmith-app .

# Expose port 3000
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000

# Command to run development server
CMD ["npm", "run", "dev"]
