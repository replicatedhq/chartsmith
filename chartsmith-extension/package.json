{
  "name": "chartsmith-extension",
  "displayName": "ChartSmith",
  "description": "ChartSmith VS Code Extension",
  "publisher": "Replicated",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/replicatedhq/chartsmith"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chartsmith-sidebar",
          "title": "ChartSmith",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "chartsmith-sidebar": [
        {
          "type": "webview",
          "id": "chartsmith.view",
          "name": "ChartSmith"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.39.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "centrifuge": "^5.3.4",
    "marked": "^15.0.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "ws": "^8.18.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
