{
  "name": "chartsmith-extension",
  "displayName": "ChartSmith",
  "description": "ChartSmith VS Code Extension",
  "publisher": "Replicated",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/replicatedhq/chartsmith"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chartsmith-sidebar",
          "title": "ChartSmith",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "chartsmith-sidebar": [
        {
          "type": "webview",
          "id": "chartsmith.view",
          "name": "ChartSmith"
        }
      ]
    },
    "commands": [
      {
        "command": "chartsmith.showFileDiff",
        "title": "ChartSmith: Show File Diff"
      },
      {
        "command": "chartsmith.createMockDiffs",
        "title": "ChartSmith: Create Mock Diffs for Testing"
      },
      {
        "command": "chartsmith.testToken",
        "title": "ChartSmith: Test Authentication Token"
      },
      {
        "command": "chartsmith.verifySession",
        "title": "ChartSmith: Verify Authentication Session"
      },
      {
        "command": "chartsmith.resetEndpoints",
        "title": "Chartsmith: Reset Endpoints to Configuration"
      },
      {
        "command": "chartsmith.testFileWrite",
        "title": "ChartSmith: Test File Writing"
      },
      {
        "command": "chartsmith.testPathResolution",
        "title": "ChartSmith: Test Path Resolution"
      },
      {
        "command": "chartsmith.showDiff",
        "title": "ChartSmith: Show Diff"
      },
      {
        "command": "chartsmith.restoreDiffs",
        "title": "ChartSmith: Restore Saved Diffs"
      },
      {
        "command": "chartsmith.refreshDiffButtons",
        "title": "ChartSmith: Refresh Diff Buttons Visibility",
        "icon": "$(refresh)"
      },
      {
        "command": "chartsmith.acceptChanges",
        "title": "ChartSmith: Accept Changes",
        "icon": "$(check)"
      },
      {
        "command": "chartsmith.rejectChanges",
        "title": "ChartSmith: Reject Changes",
        "icon": "$(x)"
      },
      {
        "command": "chartsmith.acceptSelectedFile",
        "title": "ChartSmith: Accept Selected File Changes",
        "icon": "$(check)"
      },
      {
        "command": "chartsmith.rejectSelectedFile",
        "title": "ChartSmith: Reject Selected File Changes",
        "icon": "$(x)"
      },
      {
        "command": "chartsmith.showPlanDetails",
        "title": "ChartSmith: Show Plan Details for Debugging"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "chartsmith.acceptChanges",
          "group": "navigation",
          "when": "chartsmith.diffVisible"
        },
        {
          "command": "chartsmith.rejectChanges",
          "group": "navigation",
          "when": "chartsmith.diffVisible"
        }
      ]
    },
    "keybindings": [
      {
        "command": "chartsmith.acceptChanges",
        "key": "alt+a",
        "when": "chartsmith.diffVisible"
      },
      {
        "command": "chartsmith.rejectChanges",
        "key": "alt+r",
        "when": "chartsmith.diffVisible"
      },
      {
        "command": "chartsmith.refreshDiffButtons",
        "key": "alt+shift+d",
        "when": "editorIsOpen"
      }
    ],
    "configuration": {
      "title": "ChartSmith",
      "properties": {
        "chartsmith.apiEndpoint": {
          "type": "string",
          "default": "https://chartsmith.ai",
          "description": "API endpoint for ChartSmith service"
        },
        "chartsmith.wwwEndpoint": {
          "type": "string",
          "default": "https://chartsmith.ai",
          "description": "Web endpoint for ChartSmith service"
        },
        "chartsmith.pushEndpoint": {
          "type": "string",
          "default": "",
          "description": "Push endpoint for ChartSmith service (optional)"
        },
        "chartsmith.developmentMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode with features like demo content generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "centrifuge": "^5.3.4",
    "jotai": "^2.12.2",
    "marked": "^15.0.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "ws": "^8.18.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
