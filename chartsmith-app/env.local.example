# ChartSmith Next.js App Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection URI (same as worker)
# Format: postgresql://username:password@host:port/database?sslmode=disable
CHARTSMITH_PG_URI=postgresql://chartsmith:password@localhost:5432/chartsmith?sslmode=disable

# Alternative variable name (legacy support)
DB_URI=postgresql://chartsmith:password@localhost:5432/chartsmith?sslmode=disable

# =============================================================================
# AUTHENTICATION
# =============================================================================
# NextAuth secret for session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-base64-32

# NextAuth URL (your app's URL)
NEXTAUTH_URL=http://localhost:3000

# Google OAuth credentials (for login)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# AI PROVIDERS
# =============================================================================
# OpenRouter API Key (recommended)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Anthropic API Key (optional, if using Anthropic directly)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# REAL-TIME COMMUNICATION (Public)
# =============================================================================
# Centrifugo WebSocket address (must be accessible from browser)
# Note: NEXT_PUBLIC_ prefix makes this available to the browser
NEXT_PUBLIC_CENTRIFUGO_ADDRESS=ws://localhost:8001/connection/websocket

# =============================================================================
# OPTIONAL: DEFAULT AI SETTINGS
# =============================================================================
# Default AI provider for new users (optional)
# NEXT_PUBLIC_DEFAULT_AI_PROVIDER=openrouter

# Default AI model for new users (optional)
# NEXT_PUBLIC_DEFAULT_AI_MODEL=anthropic/claude-sonnet-4.5

# =============================================================================
# OPTIONAL: FEATURE FLAGS
# =============================================================================
# Enable/disable specific features (optional)
# NEXT_PUBLIC_ENABLE_ARCHIVE_UPLOAD=true
# NEXT_PUBLIC_ENABLE_CHART_PUBLISHING=true

